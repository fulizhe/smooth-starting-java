{
    "steps": [
        {
            "title": "数据库配置",
            "fields": [
                {
                    "name": "数据库地址",
                    "type": "text",
                    "id": "db_host",
                    "default": "localhost",
                    "validation": {
                        "required": true,
                        "pattern": "^(?!\\s*$).+",
                        "errorMessage": "请输入有效的数据库地址"
                    }
                },
                {
                    "name": "数据库端口",
                    "type": "text",
                    "id": "db_port",
                    "default": "3306",
                    "validation": {
                        "required": true,
                        "pattern": "^\\d{1,5}$",
                        "errorMessage": "请输入有效的端口号（1-65535）"
                    }
                },
                {
                    "name": "启用SSL",
                    "type": "checkbox",
                    "id": "enable_ssl",
                    "default": false
                },
                {
                    "name": "数据库类型",
                    "type": "select",
                    "id": "db_type",
                    "default": "MySQL",
                    "options": ["MySQL", "PostgreSQL", "SQLite"]
                }
            ]
        },
        {
            "title": "数据库配置2",
            "fields": [
                {
                    "name": "数据库地址",
                    "type": "text",
                    "id": "db_host2",
                    "default": "localhost"
                },
                {
                    "name": "数据库端口",
                    "type": "text",
                    "id": "db_port2",
                    "default": "3306"
                }
            ]
        }        
    ]
}